<%- include("../partials/header.ejs") %>

<div class="container" style="margin-top: 5vh;">
    <div class="card text-center">
        <div class="card-header">
            <ul class="nav nav-pills card-header-pills">
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <img src="/images/logo.png" width="30" height="30" class="d-inline-block align-top" alt="">
                    </a>
                </li>
                <li class="nav-item flex-row ml-md-auto d-none d-md-flex">
                    <button type="button" class="btn btn-secondary">Cluck!</button>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <form action="/clucks" method="post" class="card-body" style="text-align: left; color: lightgray;">
                <div class="form-group">
                    <label for="content">Content</label>
                    <textarea name="content" class="form-control" id="content" placeholder="Whatchoo cluckin' 'bout?"></textarea>
                </div>
                <div class="form-group">
                    <label for="image">Image URL</label>
                    <input type="text" class="form-control" name="image" id="image" placeholder="https://i.imgur.com/sFq0wAC.jpg">
                </div>
                <button type="submit" class="btn btn-outline-secondary flex-row ml-md-auto d-none d-md-flex" style="padding-left: 3vh; padding-right: 3vh;">Cluck!</button>
            </form>
        </div>
    </div>
</div>

